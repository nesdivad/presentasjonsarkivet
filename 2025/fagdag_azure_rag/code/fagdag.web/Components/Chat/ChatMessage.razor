@using Fagdag.Web.Model

@if (State.IsAssistant)
{
    <div class="message assistant visible">
        <div class="sender-avatar">
            <div class="avatar-img">C</div>
        </div>
        <div class="sender-name">Claude</div>
        <div class="message-content">
            <div class="message-text">@(string.IsNullOrEmpty(State.Content) ? "..." : State.Content)</div>
        </div>
    </div>
}
else
{
    <div class="message user">
        <div class="sender-avatar">
            <div class="avatar-img">Du</div>
        </div>
        <div class="sender-name">Du</div>
        <div class="message-content">
            <div class="message-text">@State.Content</div>
        </div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public Message State { get; set; } = default!;
} 
